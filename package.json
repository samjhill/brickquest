{
  "name": "brickquest",
  "version": "1.0.0",
  "description": "A hybrid tabletop + maker game combining card mechanics, Lego building, and D&D-style storytelling",
  "scripts": {
    "play": "node src/ui/cli.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon src/server/server.js",
    "client": "cd src/client && npm start",
    "build": "cd src/client && npm run build",
    "test": "jest --runInBand",
    "generate-cards": "python3 scripts/generate_cards.py",
    "print-cards": "python3 scripts/print_cards.py",
    "cards": "npm run generate-cards && npm run print-cards",
    "cards:build": "ts-node tools/card-pipeline/csv_to_json.ts",
    "cards:lint": "ts-node tools/card-pipeline/lint_cards.ts",
    "cards:balance": "ts-node tools/card-pipeline/balance_report.ts",
    "cards:dedupe": "ts-node tools/card-pipeline/dedupe.ts",
    "cards:validate": "npm run cards:lint && npm run cards:balance && npm run cards:dedupe",
    "cards:all": "npm run cards:build && npm run cards:validate",
    "build:cheatsheet": "node scripts/build_cheatsheet.js",
    "sim:run": "ts-node src/sim/runner.ts --scenarios all --games 5000 --seeds 32",
    "sim:report": "ts-node src/sim/report.ts --out docs/BALANCE.md",
    "sim:ci": "npm run cards:build && npm run cards:lint && npm run sim:run -- --games 500 --seeds 8 && npm run sim:report && npm test && npm run cheat:build",
    "sim:mutate": "ts-node src/sim/mutate.ts --config mutations.json",
    "cheat:build": "md-to-pdf docs/BrickQuest_CheatSheet.md --config-file docs/.md2pdf.json",
    "docs:refresh": "npm run sim:report && node tools/sync-readme.js"
  },
  "keywords": [
    "tabletop",
    "card-game",
    "lego",
    "maker",
    "dnd",
    "rpg"
  ],
  "author": "BrickQuest Team",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "inquirer": "^8.2.6",
    "lodash": "^4.17.21",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "ajv": "^8.17.1",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "md-to-pdf": "^5.2.3",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
